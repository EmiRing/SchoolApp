@model IEnumerable<Course>

<div class="d-flex justify-content-center" id="container">
    <div class="wrapper">
        <table>
            <thead>
                <tr>
                    <td>
                        <h3>Courses:</h3>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Course" asp-action="DisplayCourse" asp-route-courseId="@course.CourseId">@course.CourseName</a>
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                        <a asp-controller="Course" asp-action="AddCourse">+Add course</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
