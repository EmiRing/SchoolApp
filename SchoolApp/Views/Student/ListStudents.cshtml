
@model IEnumerable<Student>

<div class="d-flex justify-content-center" id="container">
    <div class="wrapper">
        <table>
            <thead>
                <tr>
                    <td>
                        <h3>Students:</h3>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Student" asp-action="DisplayStudent" asp-route-StudentId="@student.Id">@student.FullName</a>
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                        <a asp-controller="Student" asp-action="AddStudent">+Add student</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
