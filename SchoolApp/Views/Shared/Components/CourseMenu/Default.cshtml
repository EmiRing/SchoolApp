@model IEnumerable<Course>

<li class="nav-item dropdown d-block d-md-none" >
    <a asp-controller="Course"
       asp-action="DisplayCourse"
       class="dropdown-toggle nav-link" data-toggle="dropdown">Courses</a>
    <ul class="dropdown-menu bg-primary">
        @foreach (var course in Model)
        {
        <li>
            <a class="nav-link" asp-controller="Course" asp-action="DisplayCourse"
               asp-route-courseId="@course.CourseId">@course.CourseName</a>
        </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="nav-link" asp-controller="Course" asp-action="AddCourse">+Add course</a>
        </li>
    </ul>
</li>











