@model IEnumerable<Teacher>

<div class="d-flex justify-content-center" id="container">
    <div class="wrapper">
        <table>
            <thead>
                <tr>
                    <td>
                        <h3>Teachers:</h3>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>
                            @teacher.FullName
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                        <a asp-controller="Teacher" asp-action="AddTeacher">+Add teacher</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
